<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb" >
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/common_top_bar_color" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/top_bar_back" />

            <View
                android:id="@+id/view_temp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/iv_back"
                android:background="#14191A" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="谁能看我的个人空间"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>
    
    
    <!--  初始显示 -->
    <LinearLayout 
        android:id="@+id/ll_page1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg_fff_color"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout 
            android:id="@+id/ll_all_can_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg_fff_color"
            android:paddingLeft="20dp">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="所有人"
                android:textSize="16sp"
                android:textColor="@color/text_black_color"/>
            <CheckBox 
                android:id="@+id/cb_all_can_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/circleTypeCheckBox"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#ebebeb"/>
        <LinearLayout 
            android:id="@+id/ll_wemolian_friend_canscan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg_fff_color"
            android:paddingLeft="20dp">
            <TextView 
               android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="微默联好友"
                android:textColor="@color/text_black_color"
                android:textSize="16sp"/>
          <CheckBox 
               android:id="@+id/cb_wemolian_friend_canscan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/circleTypeCheckBox"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#ebebeb"/>
        <LinearLayout 
            android:id="@+id/ll_only_myself"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg_fff_color"
            android:paddingLeft="20dp">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="仅自己"
                android:textColor="@color/text_black_color"
                android:textSize="16sp"/>
           <CheckBox 
               android:id="@+id/cb_only_myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/circleTypeCheckBox"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#ebebeb"/>
        <LinearLayout 
            android:id="@+id/ll_custom_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg_fff_color"
            android:paddingLeft="20dp">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="自定义"
                android:textColor="@color/text_black_color"
                android:textSize="16sp"/>
            <ImageView 
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:visibility="visible"
                android:background="@drawable/arrow_right"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ebebeb"/>
        <LinearLayout 
            android:id="@+id/ll_scan_black_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg_fff_color"
            android:paddingLeft="20dp">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="禁止访问名单"
                android:textColor="@color/text_black_color"
                android:textSize="16sp"/>
            
            <ImageView 
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:visibility="visible"
                android:background="@drawable/arrow_right"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 自定义，选择不能看个人空间的页面 -->
    <LinearLayout 
        android:id="@+id/ll_page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="5dp"
            android:scrollbarStyle="outsideOverlay"
            android:transcriptMode="normal" />
        <LinearLayout 
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg_fff_color"
            android:orientation="horizontal"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:gravity="center_vertical">
            <Button 
                android:id="@+id/btn_esc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="取消"
                android:background="@drawable/esc_bg"/>
            <Button 
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:layout_height="40dp"
                android:text="确定"
                android:background="@drawable/ok_bg"/>
        </LinearLayout>
    </LinearLayout>
    
    
</LinearLayout>
