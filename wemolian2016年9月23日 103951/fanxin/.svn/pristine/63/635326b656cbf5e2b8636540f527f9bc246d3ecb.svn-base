<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_pop_parent"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="212dp"
        android:paddingRight="12dp"
        android:layout_gravity="center"
        android:background="@color/common_bg_fff_color"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/popupwindow_add_line_bg_color" />

        <RelativeLayout
            android:id="@+id/re_addfriends"
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:text="修改备注"
                android:textColor="@color/text_f4a0ba_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/fragment_bg_color" />

        <RelativeLayout
            android:id="@+id/re_sex_man"
            android:layout_width="match_parent"
            android:layout_height="48dp" >


            <EditText
                android:id="@+id/et_new_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:background="@null"
                android:hint="请输入好友备注"
                android:textColor="#000"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/fragment_bg_color" />

        <RelativeLayout
            android:id="@+id/re_sex_woman"
            android:layout_width="match_parent"
            android:layout_height="48dp" >


            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView 
                    android:id="@+id/tv_esc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="取消"
                    android:clickable="true"/>
                <TextView 
                    android:id="@+id/tv_ok"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="确定"
                    android:clickable="true"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>