<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_func_carousel_images"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        android:src="@drawable/find_friends" />

   

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="40dp"
        android:orientation="vertical"> 
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <com.wemolian.app.wml.circle.zoom.ViewPagerFixed
	    android:id="@+id/vpf_func_carousel_images"
	    android:layout_height="match_parent"
	    android:layout_width="wrap_content"
	    android:scaleType="matrix"
	    />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="3dp"
            android:layout_alignBottom="@id/vpf_func_carousel_images"
            android:gravity="center_horizontal">
            <ImageView 
                android:id="@+id/iv_page1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/agt"/>
            <ImageView 
                android:id="@+id/iv_page2"
                android:layout_marginLeft="10dp"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/agt"/>
            <ImageView
                android:id="@+id/iv_page3"
                android:layout_marginLeft="10dp" 
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/agt"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_func_new_life"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/func_life" />

            <TextView
                android:id="@+id/tv_func_new_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="新家生活"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_func_activity_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="60px"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/func_activity" />

            <TextView
                android:id="@+id/txt_find_activity_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="活动入口"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_func_huayihua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/func_mark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="划一划"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_func_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="60px"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/func_scan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="扫一扫"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	    
	</LinearLayout>
