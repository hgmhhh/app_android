<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
	<RelativeLayout
        android:id="@+id/rl_help_foot"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:onClick="onClickFootView" >

        <RelativeLayout
            android:id="@+id/re_avatar"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:padding="1dp" >

                <ImageView
                    android:id="@+id/iv_avatar1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:src="@drawable/ic_help_foot"/>

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/re_avatar"
                   android:singleLine="true"
        android:maxWidth="200dp"
        android:ellipsize="end"
            android:textColor="#353535"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/circle_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:text="（服务与反馈）"
            android:textColor="#099ddb"
            android:textSize="12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#dadada" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingRight="30dp" >

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="服务号"
                android:textColor="#099ddb"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="服务永无止境"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
