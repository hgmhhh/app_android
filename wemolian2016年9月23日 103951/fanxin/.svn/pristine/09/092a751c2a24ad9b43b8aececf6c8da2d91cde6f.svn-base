<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fefefe" >
    
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/circle_friends_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/circle_iv_usericon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px" />

            <TextView
                android:id="@+id/circle_tv_circle_friends_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/circle_tv_friends_usercname"
                android:layout_below="@+id/circle_tv_friends_usercname"
                android:layout_marginRight="40dp"
                android:text="加载数据中……"
                android:textColor="#232323"
                android:textSize="36px" />

            <ImageButton android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/circle_ib_friends_share"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/circle_mianmian_share_icon"/>

            <TextView
                android:id="@+id/circle_tv_friends_usercname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/circle_iv_usericon"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/circle_iv_usericon"
                android:text="张云"
                android:textColor="#232323"
                android:textSize="40px" />

        </RelativeLayout>
    </FrameLayout>

    <com.wemolian.app.wml.others.CircleGridView
        android:id="@+id/gv_circle_images"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="40dp"
        android:background="#E1E0DE"
        android:scrollbars="none"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:verticalSpacing="10dp" >
    </com.wemolian.app.wml.others.CircleGridView>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp" >
		
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
            android:id="@+id/circle_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#888888"
            android:textSize="15sp" />
<TextView
            android:id="@+id/circle_tv_scan_nums"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:text="1000人浏览"
            android:textColor="#888888"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/circle_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="赞"
            android:textColor="#888888"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/circle_iv_comment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showFriendsCommentGroup"
            android:src="@drawable/circle_iv_comment_icon" />
            
        </LinearLayout>
        

        <TextView
            android:id="@+id/tv_circle_friends_comment_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="张三：大碗大碗呜呜呜呜\n张云回复张三:好" />

        <ListView 
            android:id="@+id/lv_circle_friend_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"></ListView>

        
        
    </LinearLayout>

</LinearLayout>
