<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:layout_height="40px"
        android:layout_width="match_parent"
        android:background="#f9f9f9"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#f9f9f9"
        android:orientation="horizontal">

		<RelativeLayout android:layout_width="100dp"
		    android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/profile_iv_album_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="#4a4a58" />

        <TextView
            android:id="@+id/profile_tv_album_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@+id/profile_iv_album_icon"
            android:text="时间"
            android:textColor="#454545" />
		    
		</RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="60px"
            android:background="#f9f9f9" >
            <TextView
                android:id="@+id/profile_tv_album_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/profile_btn_expression_download"
                android:layout_alignBottom="@+id/profile_btn_expression_download"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="11dp"
                android:textColor="#454545"
                android:background="#f9f9f9"
                android:text="表情awdwadwa大呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜大威德发完发完呜呜呜呜呜呜呜呜呜呜呜呜"
                android:textSize="36px" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
